<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<sqlMap namespace="NWZC036101">

    <statement id="getScale" parameterClass="EZDMsg" resultClass="Integer">
        SELECT
            CCY.AFT_DECL_PNT_DIGIT_NUM
        FROM
            CCY CCY
        WHERE
            CCY.GLBL_CMPY_CD = #glblCmpyCd#
        AND CCY.CCY_CD       = (SELECT
                                    G.STD_CCY_CD
                                FROM
                                    GLBL_CMPY G
                                WHERE
                                    G.GLBL_CMPY_CD = #glblCmpyCd#
                                AND G.EZCANCELFLAG = '0')
        AND CCY.EZCANCELFLAG = '0'
    </statement>

    <statement id="getVertexDivision" resultClass="Map" parameterClass="Map">
        SELECT
            * 
        FROM
            VTX_DIV V
        WHERE
            V.GLBL_CMPY_CD = #glblCmpyCd#
        AND V.EZCANCELFLAG = '0'
    </statement>

    <statement id="getLocNumFromCustCd" parameterClass="Map" resultClass="String">
        SELECT
                  C.LOC_NUM
            FROM
                <isEqual property="locRoleTp" compareValue="BILL_TO">
                BILL_TO_CUST C
                </isEqual>
                <isEqual property="locRoleTp" compareValue="SHIP_TO">
                SHIP_TO_CUST C
                </isEqual>
            WHERE
                C.GLBL_CMPY_CD          = #glblCmpyCd#
                <isEqual property="locRoleTp" compareValue="BILL_TO">
                AND C.BILL_TO_CUST_CD   = #billToCustCd#
                </isEqual>
                <isEqual property="locRoleTp" compareValue="SHIP_TO">
                AND C.SHIP_TO_CUST_CD   = #shipToCustCd#
                </isEqual>
                AND C.EZCANCELFLAG      = '0'
                AND ROWNUM              = 1
    </statement>

    <!-- START 2019/09/21 S.Takami [QC#53650,ADD] -->
    <statement id="getLocNameFromCustCd" parameterClass="Map" resultClass="String">
        SELECT
                <isEqual property="colTp" compareValue="LOC_NM">
                  C.LOC_NM
                </isEqual>
                <isEqual property="colTp" compareValue="ACCT_CD">
                  C.SELL_TO_CUST_CD
                </isEqual>
                <isNull property="colTp">
                  C.LOC_NM
                </isNull>
            FROM
                <isEqual property="locRoleTp" compareValue="BILL_TO">
                BILL_TO_CUST C
                </isEqual>
                <isEqual property="locRoleTp" compareValue="SHIP_TO">
                SHIP_TO_CUST C
                </isEqual>
            WHERE
                C.GLBL_CMPY_CD          = #glblCmpyCd#
                <isEqual property="locRoleTp" compareValue="BILL_TO">
                AND C.BILL_TO_CUST_CD   = #custCd#
                </isEqual>
                <isEqual property="locRoleTp" compareValue="SHIP_TO">
                AND C.SHIP_TO_CUST_CD   = #custCd#
                </isEqual>
                AND C.EZCANCELFLAG      = '0'
                AND ROWNUM              = 1
    </statement>
    <!-- END 2019/09/21 S.Takami [QC#53650,ADD] -->
</sqlMap>
