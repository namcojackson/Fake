<?xml version="1.0" encoding="UTF-8"?>
<sqlMap namespace="NLGC001001">
    <typeAlias alias="WMS_WHTMsg"       type="business.db.WMS_WHTMsg"/>
    <typeAlias alias="WMS_TASKTMsg"     type="business.db.WMS_TASKTMsg"/>
    <typeAlias alias="WMS_TRXTMsg"      type="business.db.WMS_TRXTMsg"/>

    <statement id="getTrgtWhCd" parameterClass="Map" resultMap="result.WMS_WHTMsg">
    SELECT
           WH.WH_CD
      FROM
           WMS_WH WH
     WHERE
           WH.GLBL_CMPY_CD        = #glblCmpyCd#
       AND WH.MW_REPL_TRGT_GRP_CD = #mwReplTrgtGrpCd#
       <isNotNull property="prefixWhCd">
       AND WH_CD                  LIKE #prefixWhCd# || '%'
       </isNotNull>
       AND WH.EZCANCELFLAG        = '0'
     ORDER BY
           WH.WH_CD
    </statement>
    <resultMap id="result.WMS_WHTMsg" class="WMS_WHTMsg">
        <result property="whCd" column="WH_CD" javaType="EZDTStringItem"/>
    </resultMap>

    <statement id="getWmsTaskList" parameterClass="Map" resultMap="result.WMS_TASKTMsg">
    SELECT
           WMS_TASK_CD
          ,WMS_TASK_NM
      FROM
           WMS_TASK
     WHERE
           GLBL_CMPY_CD      = #glblCmpyCd#
       AND EZCANCELFLAG      = '0'
     ORDER BY
           WMS_TASK_SORT_NUM ASC
    </statement>
    <resultMap id="result.WMS_TASKTMsg" class="WMS_TASKTMsg">
        <result property="wmsTaskCd" column="WMS_TASK_CD" javaType="EZDTStringItem"/>
        <result property="wmsTaskNm" column="WMS_TASK_NM" javaType="EZDTStringItem"/>
    </resultMap>

    <statement id="getWmsTrxList" parameterClass="Map" resultMap="result.WMS_TRXTMsg">
    SELECT
           WMS_TRX_CD
          ,WMS_TRX_NM
      FROM
           WMS_TRX
     WHERE
           GLBL_CMPY_CD      = #glblCmpyCd#
       AND EZCANCELFLAG      = '0'
       AND WMS_INBD_OTBD_CD IN
           <iterate property="wmsInbdOtbdCd" var="elem[]" open="(" close=")" conjunction=",">
           #elem[]#
           </iterate>
     ORDER BY
           WMS_TRX_SORT_NUM ASC
    </statement>
    <resultMap id="result.WMS_TRXTMsg" class="WMS_TRXTMsg">
        <result property="wmsTrxCd" column="WMS_TRX_CD" javaType="EZDTStringItem"/>
        <result property="wmsTrxNm" column="WMS_TRX_NM" javaType="EZDTStringItem"/>
    </resultMap>
</sqlMap>
