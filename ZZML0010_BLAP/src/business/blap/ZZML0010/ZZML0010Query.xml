<sqlMap namespace="ZZML0010Query">

    <typeAlias alias="ZZML0010CMsg"   type="business.blap.ZZML0010.ZZML0010CMsg"/>

    <resultMap id="result.ZZML0010CMsg" class="ZZML0010CMsg">
        <result property="ezUpTime"         column="EZUPTIME"             javaType="EZDCStringItem"/>
        <result property="ezUpTimeZone"     column="EZUPTIMEZONE"         javaType="EZDCStringItem"/>
        <result property="glblCmpyCd"       column="GLBL_CMPY_CD"         javaType="EZDCStringItem"/>
        <result property="mlSysConfigRecId" column="ML_SYS_CONFIG_REC_ID" javaType="EZDCStringItem"/>
        <result property="mlSmtpHostNm"     column="ML_SMTP_HOST_NM"      javaType="EZDCStringItem"/>
        <result property="mlSmtpPortNum"    column="ML_SMTP_PORT_NUM"     javaType="EZDCBigDecimalItem"/>
        <result property="mlSmtpUsrNm"      column="ML_SMTP_USR_NM"       javaType="EZDCStringItem"/>
        <result property="mlSmtpPassTxt"    column="ML_SMTP_PASS_TXT"     javaType="EZDCStringItem"/>
        <result property="mlDefFromNm"      column="ML_DEF_FROM_NM"       javaType="EZDCStringItem"/>
        <result property="mlDefRpyToNm_01"  column="ML_DEF_RPY_TO_NM_01"  javaType="EZDCStringItem"/>
        <result property="mlDefRpyToNm_02"  column="ML_DEF_RPY_TO_NM_02"  javaType="EZDCStringItem"/>
        <result property="mlDefRpyToNm_03"  column="ML_DEF_RPY_TO_NM_03"  javaType="EZDCStringItem"/>
        <result property="mlDefRpyToNm_04"  column="ML_DEF_RPY_TO_NM_04"  javaType="EZDCStringItem"/>
        <result property="mlDefRpyToNm_05"  column="ML_DEF_RPY_TO_NM_05"  javaType="EZDCStringItem"/>
        <result property="mlCharSetNm"      column="ML_CHAR_SET_NM"       javaType="EZDCStringItem"/>
        <result property="mlRtryNum"        column="ML_RTRY_NUM"          javaType="EZDCBigDecimalItem"/>
        <result property="mlLocId"          column="ML_LOC_ID"            javaType="EZDCStringItem"/>
        <result property="mlSysStopFlg"     column="ML_SYS_STOP_FLG"      javaType="EZDCStringItem"/>
        <result property="mlSendMaxNum"     column="ML_SEND_MAX_NUM"      javaType="EZDCBigDecimalItem"/>
        <result property="mlDefDtFmtTxt"    column="ML_DEF_DT_FMT_TXT"    javaType="EZDCStringItem"/>
        <result property="mlDefNumFmtTxt"   column="ML_DEF_NUM_FMT_TXT"   javaType="EZDCStringItem"/>
    </resultMap>

    <statement id="getMailSystemConfig" parameterClass="Map" resultMap="result.ZZML0010CMsg">
      SELECT
        EZUPTIME,
        EZUPTIMEZONE,
        GLBL_CMPY_CD,
        ML_SYS_CONFIG_REC_ID,
        ML_SMTP_HOST_NM,
        ML_SMTP_PORT_NUM,
        ML_SMTP_USR_NM,
        ML_SMTP_PASS_TXT,
        ML_DEF_FROM_NM,
        ML_DEF_RPY_TO_NM_01,
        ML_DEF_RPY_TO_NM_02,
        ML_DEF_RPY_TO_NM_03,
        ML_DEF_RPY_TO_NM_04,
        ML_DEF_RPY_TO_NM_05,
        ML_CHAR_SET_NM,
        ML_RTRY_NUM,
        ML_LOC_ID,
        ML_SYS_STOP_FLG,
        ML_SEND_MAX_NUM,
        ML_DEF_DT_FMT_TXT,
        ML_DEF_NUM_FMT_TXT
      FROM
        ML_SYS_CONFIG
      WHERE
        EZCANCELFLAG     = '0'
        AND GLBL_CMPY_CD = #glblCmpyCd#
    </statement>

</sqlMap>
