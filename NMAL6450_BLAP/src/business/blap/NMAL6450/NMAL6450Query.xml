<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<sqlMap namespace="NMAL6450Query">

	<typeAlias alias="NMAL6450CMsg"		type="business.blap.NMAL6450.NMAL6450CMsg"/>
	<typeAlias alias="NMAL6450_ASMsg"	type="business.blap.NMAL6450.NMAL6450_ASMsg"/>

	<resultMap id="result.getNMAL6450"    class="NMAL6450_ASMsg">
		<result property="glblCmpyCd_A1"       column="GLBL_CMPY_CD"        javaType="EZDCStringItem"/>
		<result property="pmtTermSortNum_A1"   column="PMT_TERM_SORT_NUM"   javaType="EZDCBigDecimalItem"/>
		<result property="pmtTermCd_A1"        column="PMT_TERM_CD"         javaType="EZDCStringItem"/>
		<result property="pmtTermNm_A1"        column="PMT_TERM_NM"         javaType="EZDCStringItem"/>
		<result property="pmtTermDescTxt_A1"   column="PMT_TERM_DESC_TXT"   javaType="EZDCStringItem"/>
		<result property="pmtTermAot_A1"       column="PMT_TERM_AOT"        javaType="EZDCBigDecimalItem"/>
		<result property="ezUpTime_A1"         column="EZUPTIME"            javaType="EZDCStringItem"/>
		<result property="ezUpTimeZone_A1"     column="EZUPTIMEZONE"        javaType="EZDCStringItem"/>
	</resultMap>
	
    <statement id="getCodeTable" parameterClass="NMAL6450CMsg" resultMap="result.getNMAL6450">
        SELECT 
            PT.GLBL_CMPY_CD            GLBL_CMPY_CD
           ,PT.PMT_TERM_CD             PMT_TERM_CD
           ,PT.PMT_TERM_NM             PMT_TERM_NM
           ,PT.PMT_TERM_SORT_NUM       PMT_TERM_SORT_NUM
           ,PT.PMT_TERM_DESC_TXT       PMT_TERM_DESC_TXT
           ,PT.PMT_TERM_AOT            PMT_TERM_AOT
           ,NVL(PT.EZUPTIME, '*')      EZUPTIME
		   ,NVL(PT.EZUPTIMEZONE, '*')  EZUPTIMEZONE
        FROM 
            PMT_TERM    PT
        WHERE
                 PT.GLBL_CMPY_CD = #glblCmpyCd#
            AND  PT.EZCANCELFLAG = '0'
        ORDER BY
            PT.PMT_TERM_SORT_NUM
    </statement>
</sqlMap>
