<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<sqlMap namespace="NLXInventoryLocation">
    <statement id="getWhInfoArray" parameterClass="Map">
        SELECT
             WH_CD
            ,LOC_NM
        FROM
            WH
        WHERE
                EZCANCELFLAG = '0'
            AND GLBL_CMPY_CD = #glblCmpyCd#
            AND (
                    (WH_SYS_TP_CD != '99'
        <isNotNull property="whCdArray">
                        AND WH_CD
            <iterate property="whCdArray" var="elem[]" open=" IN (" close=")" conjunction=",">
                            #elem[]#
            </iterate>
        </isNotNull>
                    )
        <isNotNull property="whCdAdjArray">
                        OR (WH_CD
            <iterate property="whCdAdjArray" var="elem[]" open=" IN (" close=")" conjunction=",">
                            #elem[]#
            </iterate>
                        )
        </isNotNull>
            )
        <isNotNull property="rgtnStsCdArray">
            AND RGTN_STS_CD
            <iterate property="rgtnStsCdArray" var="elem[]" open=" NOT IN (" close=")" conjunction=",">
                #elem[]#
            </iterate>
        </isNotNull>
        ORDER BY
            WH_CD
    </statement>
</sqlMap>
